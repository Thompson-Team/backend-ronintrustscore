{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "scripts/**/*",
    "src/**/*",
    "test/**/*",
    "hardhat.config.ts",
    "hardhat.d.ts"
, "contracts-project/scripts"  ],
  "exclude": ["node_modules", "cache", "dist"]
}
